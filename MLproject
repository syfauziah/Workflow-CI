name: wine-quality-mlops

python_env: python_env.yaml

entry_points:
  main:
    parameters:
      data_dir: {type: string, default: "winequality_preprocessing"}
      n_estimators: {type: int, default: 100}
      max_depth: {type: int, default: 10}
      min_samples_split: {type: int, default: 5}
      random_state: {type: int, default: 42}
    command: "python modelling.py --data-dir {data_dir} --n-estimators {n_estimators} --max-depth {max_depth} --min-samples-split {min_samples_split} --random-state {random_state}"
  
  tuning:
    parameters:
      data_dir: {type: string, default: "winequality_preprocessing"}
      n_trials: {type: int, default: 50}
    command: "python modelling_tuning.py --data-dir {data_dir} --n-trials {n_trials}"
